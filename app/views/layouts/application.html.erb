<!DOCTYPE html>
<html>
  <head>
    <title>IncomeReport</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<div class="container">
	<ul class="nav nav-tabs">
	  	<li role ="presentation" class="active"><%= link_to 'Home', welcome_index_path %></li>
	  	<li role ="presentation" ><%= link_to 'Donation', donations_path %></li>
      <li role ="presentation" ><%= link_to 'Company CSV', companies_path %></li>
	  	<li role ="presentation"><%= link_to 'FAQs', welcome_faqs_path %></li>
	  	<li role ="presentation"><%= link_to 'About Us', welcome_about_path %></li>
	</ul>


  <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>

      <%= flash[:notice] %>
    </div>

  <% elsif flash[:error]%>
  <div class="alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:alert] %>
  </div>
<% end %>

    <%= yield %>
</div>
  </body>
</html>
