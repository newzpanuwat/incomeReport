<p id="notice"><%= notice %></p>

<div class="row">
<h1>Donations</h1>
  <div class="pull-right" "range-query">
    <%= form_tag donations_path, method: :get do %>
      <%= text_field_tag 'search[date_from]',@search.date_from %>
      <%= text_field_tag 'search[date_to]',@search.date_to %>
      <%= submit_tag 'Search', class: 'btn search-button' %>
  <% end %>
  </div>
</div>



<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Company</th>
      <th>Amout</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.date.strftime("%m-%d-%Y") %></td>
        <td><%= donation.firstname %></td>
        <td><%= donation.lastname %></td>
        <td><%= donation.company %></td>
        <td><%= donation.amout %></td>
        <td><%= link_to 'Show', donation, class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_donation_path(donation), class: 'btn btn-sm btn-success'  %></td>
        <td><%= link_to 'Destroy', donation, method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Donation', new_donation_path %>
