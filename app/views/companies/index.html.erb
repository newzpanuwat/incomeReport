<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<div class="media">
  <div class="media-body">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Manager</th>
      <th>Status</th>
      <th>Terms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.manager %></td>
        <td><%= company.status %></td>
        <td><%= company.terms %></td>
        <td><%= link_to 'Show', company, class: 'btn btn-sm btn-info' %></td>
        <td><%= link_to 'Edit', edit_company_path(company), class: 'btn btn-sm btn-warning' %></td>
        <td><%= link_to 'Destroy', company, method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
<%= link_to 'New Company', new_company_path, class: 'btn btn-sm btn-default' %>

<br>
<hr>
<div>
<h3> Import Companies CSV</h3>
<%= form_tag import_companies_path, multipart: true do %>
  <%= file_field_tag :file %>
  <br>
  <%= submit_tag "Upload", class: 'btn btn-sm btn-default' %>
<% end %>
</div>
<hr>
<h3> Download File to CSV </h3>
<%= link_to "Download", companies_path(format: "csv"), class: 'btn btn-sm btn-default' %>



